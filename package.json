{
  "name": "fluxgpu",
  "version": "5.0.0",
  "private": true,
  "description": "Modern WebGPU framework with Hexagonal Architecture, type-safe shader DSL, and first-class framework bindings",
  "author": "AnNingUI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnNingUI/FluxGPU.git"
  },
  "homepage": "https://github.com/AnNingUI/FluxGPU#readme",
  "bugs": {
    "url": "https://github.com/AnNingUI/FluxGPU/issues"
  },
  "keywords": [
    "webgpu",
    "gpu",
    "graphics",
    "compute",
    "shader",
    "wgsl",
    "dsl",
    "typescript",
    "react",
    "vue",
    "solid",
    "preact"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "validate:arch": "pnpm --filter @flux/arch-validator build && node packages/arch-validator/dist/cli.js",
    "prebuild": "pnpm validate:arch",
    "prepublish": "pnpm build",
    "publish:all": "pnpm -r publish --access public --no-git-checks",
    "version:patch": "pnpm -r exec -- npm version patch",
    "version:minor": "pnpm -r exec -- npm version minor",
    "version:major": "pnpm -r exec -- npm version major",
    "edev:vanilla": "pnpm --filter \"@flux/example-vanilla\" dev",
    "edev:react": "pnpm --filter \"@flux/example-react\" dev",
    "edev:vue": "pnpm --filter \"@flux/example-vue\" dev",
    "edev:preact": "pnpm --filter \"@flux/example-preact\" dev",
    "edev:solid": "pnpm --filter \"@flux/example-solid\" dev"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
