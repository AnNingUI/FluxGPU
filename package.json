{
	"name": "fluxgpu",
	"version": "5.2.3",
	"private": true,
	"description": "Modern WebGPU framework with Hexagonal Architecture, type-safe shader DSL, and first-class framework bindings",
	"author": "AnNingUI",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/AnNingUI/FluxGPU.git"
	},
	"homepage": "https://github.com/AnNingUI/FluxGPU#readme",
	"bugs": {
		"url": "https://github.com/AnNingUI/FluxGPU/issues"
	},
	"keywords": [
		"webgpu",
		"gpu",
		"graphics",
		"compute",
		"shader",
		"wgsl",
		"dsl",
		"typescript",
		"react",
		"vue",
		"solid",
		"preact"
	],
	"scripts": {
		"build": "pnpm -r build",
		"build:clean": "pnpm clean:tsbuildinfo && pnpm build",
		"test": "pnpm -r test",
		"lint": "pnpm -r lint",
		"clean": "pnpm -r clean",
		"clean:tsbuildinfo": "node -e \"const fs=require('fs');const path=require('path');function find(dir,pattern,results=[]){try{fs.readdirSync(dir).forEach(f=>{const p=path.join(dir,f);if(fs.statSync(p).isDirectory()&&f!=='node_modules')find(p,pattern,results);else if(f.match(pattern))results.push(p)})}catch{}return results}find('packages',/tsconfig\\.tsbuildinfo$/).forEach(f=>{try{fs.unlinkSync(f);console.log('Deleted:',f)}catch{}})\"",
		"typecheck": "pnpm -r typecheck",
		"validate:arch": "pnpm --filter @fluxgpu/arch-validator build && node packages/arch-validator/dist/cli.js",
		"prebuild": "pnpm validate:arch",
		"prepublish": "pnpm build",
		"publish:all": "pnpm -r publish --access public --no-git-checks --registry=https://registry.npmjs.org",
		"version:patch": "pnpm -r exec -- npm version patch",
		"version:minor": "pnpm -r exec -- npm version minor",
		"version:major": "pnpm -r exec -- npm version major",
		"edev:vanilla": "pnpm --filter \"@fluxgpu/example-vanilla\" dev",
		"edev:react": "pnpm --filter \"@fluxgpu/example-react\" dev",
		"edev:vue": "pnpm --filter \"@fluxgpu/example-vue\" dev",
		"edev:preact": "pnpm --filter \"@fluxgpu/example-preact\" dev",
		"edev:solid": "pnpm --filter \"@fluxgpu/example-solid\" dev"
	},
	"devDependencies": {
		"typescript": "^5.3.3",
		"vitest": "^1.0.4"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
